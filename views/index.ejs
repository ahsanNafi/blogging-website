<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Website</title>
    <link rel="stylesheet" href="/css/style.css"> <!-- External CSS file -->
</head>
<body>
    <header>
        <h1>My Blog</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/create">Create Post</a></li>
                <li><a href="/edit">Edit Post</a></li>
                <li><a href="/delete">Delete Post</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <section id="posts">
            <h2> Blog Posts</h2>
            <ul>
                <% data.forEach(item => { %> <!-- Loop through the posts -->
                    <li>
                        <!-- Title as a clickable link to the full post -->
                         <div>
                            <h3><a href="/post/<%# post.id %>"><%= item.title %></a></h3>
                            <p><%=item.data%></p>
                         </div>

                        <div>Created on: <%= item.time %></div>
                    </li>
                <% }) %>
            </ul>
        </section>
    </main>

    <footer>
        <p>&copy; <%= new Date().getFullYear() %> My Blog</p>
    </footer>
</body>
</html>

